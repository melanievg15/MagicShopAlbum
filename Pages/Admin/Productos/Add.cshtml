@page
@model  MagicShopAlbum.Pages.Admin.Productos.AddModel
@{
}

   <style>
    /* Estilos para el cuerpo de la página */
    body {
        background-image: url('/img/fondo.jpeg'); /* Establece la imagen de fondo */
        background-size: cover; /* Ajusta la imagen para que cubra todo el fondo */
        background-position: center; /* Centra la imagen */
        background-repeat: no-repeat; /* Evita que la imagen se repita */
        height: 100vh; /* Asegura que el fondo cubra toda la altura de la ventana */
        margin: 0; /* Elimina el margen predeterminado del body */
    }
</style>

<br>

<body>
    <!-- Contenedor principal de la página -->
    <div class="container">
        <div class="row">
            <div class="col-md-8 mx-auto rounded border p-3 custom-background">
                    <!-- Contenedor para el título centrado -->
   <!-- Contenedor para el título centrado -->
                <div class="text-center">
                    <h1 class="display-4" style="color:black">Agregar Álbum</h1> <!-- Título grande para la página de edición -->
                </div>
                <!-- Mensajes de alerta para errores o éxitos -->
                @if (Model.errorMessage?.Length > 0)
                {
                        <div class='alert alert-warning alert-dismissible fade show' role='alert'>
                            <strong>@Model.errorMessage</strong>  <!-- Muestra el mensaje de error -->
                            <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
                        </div>
                }
                else if (Model.successMessage?.Length > 0)
                {
                        <div class='alert alert-success alert-dismissible fade show' role='alert'>
                            <strong>@Model.successMessage</strong>  <!-- Muestra el mensaje de éxito -->
                            <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
                        </div>
                }

                <!-- Formulario para agregar un álbum -->
                <form method="post" enctype="multipart/form-data">
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Nombre</label>  <!-- Etiqueta para el campo de nombre -->
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="ProductoDto.nombre">  <!-- Campo de entrada para el nombre del producto -->
                            <span asp-validation-for="ProductoDto.nombre" class="text-danger"></span>  <!-- Muestra errores de validación para el nombre -->
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Artista</label>  <!-- Etiqueta para el campo de artista -->
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="ProductoDto.artista">  <!-- Campo de entrada para el artista del producto -->
                            <span asp-validation-for="ProductoDto.artista" class="text-danger"></span>  <!-- Muestra errores de validación para el artista -->
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Precio</label>  <!-- Etiqueta para el campo de precio -->
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="ProductoDto.precio">  <!-- Campo de entrada para el precio del producto -->
                            <span asp-validation-for="ProductoDto.precio" class="text-danger"></span>  <!-- Muestra errores de validación para el precio -->
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Tipo</label>  <!-- Etiqueta para el campo de tipo -->
                        <div class="col-sm-8">
                            <select class="form-select" asp-for="ProductoDto.tipo">
                                <!-- Selector para el tipo de producto -->
                                <option value='CD'>CD</option>
                                <option value='Vinilo'>Vinilo</option>
                                <option value='BlueRay'>BlueRay</option>
                                <option value='DVD'>DVD</option>
                            </select>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Cantidad</label>  <!-- Etiqueta para el campo de cantidad -->
                        <div class="col-sm-8">
                            <input class="form-control" asp-for="ProductoDto.cantidad">  <!-- Campo de entrada para la cantidad del producto -->
                            <span asp-validation-for="ProductoDto.cantidad" class="text-danger"></span>  <!-- Muestra errores de validación para la cantidad -->
                        </div>
                    </div>

                    <!-- Botones para enviar el formulario o cancelar -->
                    <div class="row mb-3">
                        <div class="offset-sm-4 col-sm-4 d-grid">
                            <button type="submit" class="btn btn-primary">Aceptar</button>  <!-- Botón para enviar el formulario -->
                        </div>
                        <div class="col-sm-4 d-grid">
                            <a class="btn btn-outline-primary" href="/Admin/Productos/Home" role="button">Cancelar</a>  <!-- Enlace para cancelar y volver a la página principal -->
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
